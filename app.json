{
  "expo": {
    "name": "SmartBite",
    "slug": "smart-bite",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "plugins": [
        [
          "react-native-dotenv",
          {
            "envName": "APP_ENV",
            "moduleName": "@env",
            "path": ".env",
            "safe": false,
            "allowUndefined": true,
            "verbose": false
          }
        ]
      ]
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "scheme": "smartbite",
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
